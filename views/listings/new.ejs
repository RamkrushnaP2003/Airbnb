<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create new listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          name="listing[title]"
          class="form-control"
          placeholder="Add a catchy title"
          required />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label" required>description</label>
        <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          required></textarea>
        <div class="invalid-feedback">Please enter valid description</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="image"
          required
          placeholder="Enter image url/link" />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" for="image" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            class="form-control"
            placeholder="eg. 1200"
            required />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="price" for="country" class="form-label">country</label>
          <input
            type="text"
            id="country"
            class="form-control"
            name="listing[country]"
            placeholder="India"
            required />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          id="location"
          class="form-control"
          placeholder="Enter location"
          required />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <br /><br />

      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
